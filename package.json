{
  "name": "commit-group",
  "displayName": "Commit Group",
  "description": "Group your commits",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:commit-group-view",
    "onCommand:commit-group.refresh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-group.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "commit-group.expandAll",
        "title": "展开所有",
        "icon": "$(expand-all)"
      },
      {
        "command": "commit-group.collapseAll",
        "title": "折叠所有",
        "icon": "$(collapse-all)"
      },
      {
        "command": "commit-group.addGroup",
        "title": "新建分组",
        "icon": "$(add)"
      },
      {
        "command": "commit-group.deleteGroup",
        "title": "删除分组",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-group",
          "title": "%view.commitGroup.title%",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "commit-group": [
        {
          "id": "commit-group-view",
          "name": "%view.commitGroup.name%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "commit-group.refresh",
          "when": "view == commit-group-view",
          "group": "navigation"
        },
        {
          "command": "commit-group.expandAll",
          "when": "view == commit-group-view",
          "group": "navigation"
        },
        {
          "command": "commit-group.collapseAll",
          "when": "view == commit-group-view",
          "group": "navigation"
        },
        {
          "command": "commit-group.addGroup",
          "when": "view == commit-group-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "commit-group.deleteGroup",
          "when": "view == commit-group-view && viewItem == group",
          "group": "inline"
        }
      ]
    }
  },
  "extensionDependencies": [
	  "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.x.x",
    "typescript": "^4.x.x"
  }
}